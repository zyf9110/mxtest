<!--index.wxml-->


<view class="container page" style="background-image:url(/image/游戏开始界面.jpg);background-size:100% 122% ;background-position:16px -10px" >
  <view class="userinfo">
    <block wx:if="{{canIUseOpenData}}">
      <view class="userinfo-avatar" >
        
      </view>
      
    </block>
    <block wx:elif="{{!hasUserInfo}}">
      <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile"> 获取头像昵称 </button>
      <button wx:elif="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <view wx:else> 请使用1.4.4及以上版本基础库 </view>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
    
  </view>
  <view class="menu">
    <button type="primary" bindtap="goPVP">
      双人模式
    </button>
    <button type="primary" bindtap="goPVE" class="mt60" >
      人机对战
    </button>
    <button class="mt60" type="primary" bindtap="gorule">
      游戏规则
    </button>
  </view>
  
</view>
